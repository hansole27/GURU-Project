<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/book_main"
        android:layout_width="374dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="#72FFEB3B"
        android:gravity="center"
        android:padding="16dp"
        android:text="독서 발자취"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/책1"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/book_background"
        android:elevation="4dp"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@id/책2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_main"
        app:srcCompat="@drawable/baseline_book_24"
        app:tint="#FFC633" />

    <ImageView
        android:id="@+id/책2"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/book_background"
        android:elevation="4dp"
        android:padding="16dp"
        app:layout_constraintStart_toEndOf="@id/책1"
        app:layout_constraintEnd_toStartOf="@id/책3"
        app:layout_constraintTop_toBottomOf="@id/book_main"
        app:srcCompat="@drawable/baseline_book_24"
        app:tint="#FFC633" />

    <ImageView
        android:id="@+id/책3"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/book_background"
        android:elevation="4dp"
        android:padding="16dp"
        app:layout_constraintStart_toEndOf="@id/책2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_main"
        app:srcCompat="@drawable/baseline_book_24"
        app:tint="#FFC633" />

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:layout_marginEnd="16dp"
            android:textStyle="bold"
            app:cornerRadius="24dp"
            android:text="추가" />
        <Button
            android:id="@+id/listButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            app:cornerRadius="24dp"
            android:text="목록" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

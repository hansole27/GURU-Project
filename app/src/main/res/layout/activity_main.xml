<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/book_main"
        android:layout_width="374dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="#72FFEB3B"
        android:gravity="center"
        android:padding="16dp"
        android:text="독서 발자취"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/book_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/book_main">

        <ImageView
            android:id="@+id/책1"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/book_background"
            android:elevation="4dp"
            android:padding="16dp"
            app:srcCompat="@drawable/baseline_book_24"
            app:tint="#FFC633" />

        <ImageView
            android:id="@+id/책2"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/book_background"
            android:elevation="4dp"
            android:padding="16dp"
            app:srcCompat="@drawable/baseline_book_24"
            app:tint="#FFC633" />

        <ImageView
            android:id="@+id/책3"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/book_background"
            android:elevation="4dp"
            android:padding="16dp"
            app:srcCompat="@drawable/baseline_book_24"
            app:tint="#FFC633" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/추가버튼"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#FFC633"
            android:text="추가"
            android:textColor="#FFFDFD"
            android:textStyle="bold"
            app:cornerRadius="24dp" />

        <Button
            android:id="@+id/목록버튼"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#FFC633"
            android:text="목록"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:cornerRadius="24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
